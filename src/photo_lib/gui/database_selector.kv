    BoxLayout:
        orientation: 'vertical'
        size_hint: 1.0, 1.0

        FileChooserIconView:
            id: file_selector
            size_hint: None, 1.0
            width: self.parent.parent.parent.width
            path: "/media/alisot2000/DumpStuff/Photo_Library_Testing/"
